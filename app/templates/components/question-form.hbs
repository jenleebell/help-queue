{{#if formShowing}}

<span class="question-title"><h2>Ask a question</h2></span>
  <form>
    <div class="container">
      <div class="form-group">
        <label for="name"></label>
        {{input value=name id="name" class="form-control" placeholder="Enter your name"}}
      </div>

      <div class="form-group">
        <label for="question"></label>
        {{textarea value=question class="form-control" rows="5" placeholder="Enter your question"}}
      </div>
    </div>

      <button class="btn btn-warning" {{action 'save'}}>Submit</button>
  </form>
<br>
{{else}}
<center>
  <span class="intro">Do you need answers? We have help.
    <br>
    Click the button below to request a hero.</span>
  <br>
  <br>
  <button class='btn btn-warning'{{action 'formShow'}}>Ask a question</button>
</center>
{{/if}}
